<h1>Sign up</h1><br>
<div class="jumbotron col-md-6">
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.text_field :name, placeholder: "Enter Name" %>
    <%= f.email_field :email, autofocus: true, placeholder: "Enter Email" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter password again" %>
    <%= f.file_field :image %>
    <%= f.submit "Sign up" %> 
  <% end %>
</div>