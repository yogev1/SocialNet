<div class="container">
	<div class="row">
		<p id="notice"><%= notice %></p>
	</div>

	<div class="row">
		<p>
		  <strong>Title:</strong>
		  <%= @post.title %>
		</p>
		<p>
		  <strong>Description:</strong>
		  <%= @post.description %>
		</p>
	</div>
	<div class="row">
		<div class="btn-group">
			<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info" %>
			<%= link_to 'Back', posts_path, class: "btn btn-info" %>
		</div>
	</div>
</div>	