<div class="container">    
  <!--  user authentication -->
  <% if user_signed_in? %>
  <p id="notice"><%= notice %></p>
  
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-6 text-center coolfont">
      <h1 style="text-decoration: underline">Feed</h1>
    </div>  
  </div>

  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-md-2">
    </div>
    <div class="col-md-6 coolfont" align="center">
      <h3 class="row box text-center">
        <div class="col-md-12">
          <%= @name = User.find(post.user_id).name %>'s Saying: <%= post.description %>
        </div>
        <div class="col-md-12">        
          <br/><%= image_tag post.image.url(:thumb), class: "img-responsive", style: "display: inline-block" %><br/><br/>
        </div>  
        <div class="col-md-12">
            <%= bootstrap_form_for [post, post.likes.new] do |f| %> 
              <h3 class="pull-left" style="font-size: 80%">
              <%= f.submit "Like", class: "btn btn-primary btn-sm pull-left" %>
            <% end %>
            <%= bootstrap_form_for [post, post.comments.new] do |f| %> 
              <h3 class="pull-left" style="font-size: 80%">
              <%= f.text_area :description, hide_label: true, rows: "1", cols: "25" %>
              <%= f.submit "Add Comment", class: "btn btn-primary btn-sm pull-left" %>
            <% end %>
        </div>
        <div class="col-md-12">
          <h6><%= post.likes.count %></h6>
            <% if post.comments %>
            <div class="row">
              <% post.comments.order(created_at: "DESC").limit(3) %> 
              <% post.comments.each do |c| %>
              <div class="col-md-6">
                <%= c.description %>
              </div>  
              <% end %> 
            </div>
            <% end %>  
          </div>  
        </h3>
        <h5>Created at: <%= post.created_at %></h5><hr>
      </div>     
      <div class="col-md-4 btn-group btn-sm">
        <%= link_to 'Edit', edit_post_path(post), class: "btn btn-info", style: "height: 5%" %>
        <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info", style: "height: 5%" %>
      </div>
      <% end %> 
    </div>    


    <% else %>
    <div class="row">
      <h1>Please sign In Or Sign Up before trying to view or modify the Feed</h1>
    </div>
    <% end %>
  </div>
