  <h1 style="color:red"><p id="notice"><%= notice %></p></h1>

  <div class="row coolfont">
    <div class="col-md-4 col-xs-12">
      <div class="row">
        <%= image_tag @user.image.url(:medium) %>
      </div>
      <div class="row">
        <div class="col-md-7 text-center">
          <h1><%= @user.name %></h1>
        </div>  
      </div><br/>
      <div class="row">
        <div class="btn-group col-md-3">
          <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-info btn-lg" %>
          <%= link_to 'Back', root_path, class: "btn btn-info btn-lg" %>
          <%= link_to 'Find New Friends', users_path, class: "btn btn-primary btn-lg" %>
          <%= link_to 'Your Friends', friendships_path, class: "btn btn-success btn-lg" %>
        </div>
      </div>  
    </div> 

    <div class="col-md-6 col-xs-12">
      <br/><br/><br/>
        <%= bootstrap_form_for(@post, html: { multipart: true }) do |f| %>
          <%= f.text_field :description, hide_label: true, placeholder: "What's on your mind?"%>
          <%= f.submit "Post", class: "btn btn-info btn-lg" %>
        <% end %><br/> 
      <div class="row">
        <div class="col-md-12">
          <h2 style="text-decoration: underline">Your recent posts:</h2>
        </div>  
      </div>
      <div class="row">  
        <% @posts.each do |post| %>
          <div class="col-md-12 box coolfont">
            <h2><%= post.description %></h2>
          </div>  
        <% end %>
      </div>
    </div> 
  </div><br/> 
